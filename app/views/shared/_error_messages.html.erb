<% if object.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <%= t "error.the_form_contain" %>
      <%= pluralize object.errors.count, t("error.error") %>.
    </div>
    <ul>
     <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
  </div>
<% end %>
