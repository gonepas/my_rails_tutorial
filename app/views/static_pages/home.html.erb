<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "home.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1> <%= t "home.title" %> </h1>
    <h2>
      <%= t "home.title" %>
      <%= link_to t("home.text2"), "http://www.railstutorial.org/"%>
      <%= t "home.text3" %>
    </h2>
    <%= link_to t("home.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("duck.jpg", alt: t("home.alt")),
  "http://rubyonrails.org/", class: "photo1" %>
<% end %>
